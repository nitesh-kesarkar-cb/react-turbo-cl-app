{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "outputs": [".turbo/test-cache/**"]
    }
  }
}
